<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= form_for @wallet, url: user_wallets_path(current_user.id) do |f| %>
        <div class="form-group">
          <label>Dash</label>
          <%= f.text_field :cash, class: "form-control", placeholder: "Dash" %>
        </div>
        <div class="form-group">
          <label>Card Name</label>
          <%= f.text_field :card_name, class: "form-control", placeholder:"Card Name" %>
        </div>
        <div class="form-group">
          <label>Card Number</label>
          <%= f.text_field :card_number, class: "form-control", placeholder: "Card Number" %>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      <% end %>
    </div>
  </div>
</div>
