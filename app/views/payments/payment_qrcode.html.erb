<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="text-center">
                <i class="fa fa-search-plus pull-left icon"></i>
                <h2 class="text-uppercase text-primary">
                  <strong>Chi tiết đơn hàng</strong>
                </h2>
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-12 col-md-4 col-lg-4 pull-left">
                    <div class="panel panel-default height">
                        <div class="panel-heading">Billing Details</div>
                        <div class="panel-body">
                            <strong>Email:</strong><br>
                            <%= current_user.email %><br>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 col-lg-4">
                    <div class="panel panel-default height">
                        <div class="panel-heading">Payment Information</div>
                        <div class="panel-body">
                            <strong>Card Name:</strong>
                            <%= current_user.wallets.first.card_name if current_user.wallets.present? %>
                            <br>
                            <strong>Card Number:</strong>
                            <%= current_user.wallets.first.card_number if current_user.wallets.present? %>
                            <br>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 col-lg-4">
                    <div class="panel panel-default height">
                        <div class="panel-heading">Order Preferences</div>
                        <div class="panel-body">
                            <strong>Gift:</strong> No<br>
                            <strong>Express Delivery:</strong> Yes<br>
                            <strong>Insurance:</strong> No<br>
                            <strong>Coupon:</strong> No<br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="text-center">
                      <strong class="text-primary">Order summary</strong>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <td><strong>Item Name</strong></td>
                                    <td class="text-center"><strong>Item Price</strong></td>
                                    <td class="text-center"><strong>Item Quantity</strong></td>
                                    <td class="text-right"><strong>Total</strong></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><%= @target_payment.item.name %></td>
                                    <td class="text-center">
                                      <%= @target_payment.item.unit_price %> VND
                                    </td>
                                    <td class="text-center">
                                      <%= @target_payment.amount %>
                                    </td>
                                    <td class="text-right">
                                      <%= @target_payment.amount * @target_payment.item.unit_price %> VND
                                    </td>
                                </tr>
                                <tr>
                                    <td class="emptyrow"><i class="fa fa-barcode iconbig"></i></td>
                                    <td class="emptyrow"></td>
                                    <td class="emptyrow text-center"><strong>Total</strong></td>
                                    <td class="emptyrow text-right">
                                      <%= @target_payment.amount * @target_payment.item.unit_price %> VND
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="pull-right">
          <%= link_to "Confirm", confirm_payment_item_payment_path(@target_payment.item_id, @target_payment.id),
            class: "btn btn-success" %>
          <%= link_to "Reject", reject_payment_item_payment_path(@target_payment.item_id, @target_payment.id),class: "btn btn-danger" %>
        </div>
      </div>
    </div>
</div>
